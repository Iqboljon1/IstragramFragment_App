<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="ra1mjanov_03_"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_up"
            app:layout_constraintLeft_toRightOf="@id/tv_profile"
            app:layout_constraintTop_toTopOf="@id/tv_profile" />

        <ImageView
            android:id="@+id/image_density"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_density"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_add_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/image_density"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_actionBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_actionBar">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_11"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/posts_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/image_profile"
            app:layout_constraintRight_toLeftOf="@id/followers_count"
            app:layout_constraintTop_toTopOf="@id/image_profile" />

        <TextView
            android:id="@+id/tv_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@id/posts_count"
            app:layout_constraintRight_toRightOf="@id/posts_count"
            app:layout_constraintTop_toBottomOf="@id/posts_count"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/followers_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="862"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/posts_count"
            app:layout_constraintRight_toLeftOf="@id/following_count"
            app:layout_constraintTop_toTopOf="@id/image_profile"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@id/followers_count"
            app:layout_constraintRight_toRightOf="@id/followers_count"
            app:layout_constraintTop_toBottomOf="@id/followers_count"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/following_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:text="490"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/followers_count"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/image_profile"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="@id/following_count"
            app:layout_constraintRight_toRightOf="@id/following_count"
            app:layout_constraintTop_toBottomOf="@id/following_count"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text=" #ð™¼ðš„ðš‚ðš„ð™»ð™¼ð™°ð™½_ðŸŒ™ðŸ¤Ž\n
â˜˜ï¸Qisqa qilib aytamiz bu dunyo
 hammamizda qoladiðŸ€ \n
ðŸ”¥Ð¡Ð¾Ð±Ð°ÐºÐ° Ð»Ð°ÐµÑ‚ Ð°, ÐºÐ°Ñ€Ð°Ð²Ð°Ð½  Ð¸Ð´Ã«Ñ‚ðŸ”¥"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly_actionBar2"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/ly_editProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/card_background"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="@id/ly_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ly_arrow"
        app:layout_constraintTop_toBottomOf="@id/tv_description">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit profile"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/card_background"
        android:padding="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_up" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_storyHighlights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Story highlights"
        app:layout_constraintTop_toBottomOf="@id/ly_editProfile"
        app:layout_constraintLeft_toLeftOf="@id/ly_editProfile"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_up"
        app:layout_constraintTop_toBottomOf="@id/ly_arrow"
        app:layout_constraintRight_toRightOf="@id/ly_arrow"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/image_ic_grid"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_grid"
        app:layout_constraintTop_toBottomOf="@id/tv_storyHighlights"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/image_ic_play"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/image_ic_play"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_play"
        app:layout_constraintTop_toBottomOf="@id/tv_storyHighlights"
        app:layout_constraintLeft_toRightOf="@id/image_ic_grid"
        app:layout_constraintRight_toLeftOf="@id/image_ic_personProfile"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/image_ic_personProfile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_person_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_storyHighlights"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_ic_play"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/ly_liner"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@id/image_ic_play"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        android:background="#65000000"
        android:orientation="horizontal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPosts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ly_liner"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"/>

</androidx.constraintlayout.widget.ConstraintLayout>